<% provide(:title, "收款记录") %>
<h1 class="page-header">收款记录</h1>

<div class="form-inline">

  <%= link_to '添加收款记录', new_repayment_record_path, class: 'btn btn-default', 'data-no-turbolink' => true %>

</div>

<% if @repayment_records.present? %>
  <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <th>日期</th>
        <th>金额</th>
        <th>备注</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @repayment_records.each do |r| %>
        <tr>
          <td><%= r.payment_date %></td>
          <td><%= r.total_amount %></td>
          <td><%= r.message %></td>
          <td><%= link_to'修改' , edit_repayment_record_path(r), class: 'btn btn-info'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>