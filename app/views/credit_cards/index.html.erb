<% provide(:title, "银行卡") %>
<h1 class="page-header">银行卡</h1>

<div class="form-inline">

  <%= link_to '添加银行卡', new_credit_card_path, class: 'btn btn-default', 'data-no-turbolink' => true %>

</div>

<% if @credit_cards.present? %>
  <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <th>银行</th>
        <th>卡号</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @credit_cards.each do |c| %>
        <tr>
          <td><%= c.bank_name %></td>
          <td><%= c.number %></td>
          <td><%= link_to'修改' , edit_credit_card_path(c), class: 'btn btn-info'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>