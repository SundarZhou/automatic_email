<% provide(:title, "银行卡") %>
<h1 class="page-header">银行卡</h1>

<div class="form-inline">

  <%= link_to '添加银行卡', new_credit_card_path, class: 'btn btn-default', 'data-no-turbolink' => true %>

</div>

<% if @credit_cards.present? %>
  <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <th>银行</th>
        <th>卡号</th>
        <th>未结清数</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @credit_cards.each do |c| %>
        <tr>
          <td><%= c.bank_name %></td>
          <td><%= c.number %></td>
          <td><%= c.credit_card_records.where(repayment_record_id: nil).size %></td>
          <td>
            <%= link_to'修改' , edit_credit_card_path(c), class: 'btn btn-info' %>
            <%= link_to '未结清列表', outstanding_credit_card_path(c), class: 'btn btn-success'  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>