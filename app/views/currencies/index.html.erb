<% provide(:title, "币种") %>
<h1 class="page-header">币种</h1>

<div class="form-inline">

  <%= link_to '添加币种', new_currency_path, class: 'btn btn-default', 'data-no-turbolink' => true %>

</div>

<% if @currencies.present? %>
  <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <th>币种</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @currencies.each do |c| %>
        <tr>
          <td><%= c.name %></td>
          <td><%= link_to'修改' , edit_currency_path(c), class: 'btn btn-info'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>